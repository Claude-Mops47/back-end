{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "background.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "functions": {
    "removeExpiredRefreshTokens": {
      "handler": "background.removeExpiredRefreshTokens",
      "schedule": "cron(0 10 * * *)" 
    }
  }
}
